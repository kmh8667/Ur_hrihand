<launch>



  <!-- specify the planning pipeline -->
  <arg name="pipeline" default="ompl" />

  <!-- By default, we do not start a database (it can be large) -->
  <arg name="db" default="false" />
  <!-- Allow user to specify database location -->
  <arg name="db_path" default="$(find ur_hrihand_moveit_config)/default_warehouse_db" />

  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false" />

  <arg name="marker_frame_id"     default="/base_link"/>
  <arg name="user_marker_size"	  default="12.3"/> 
  
<!-- gripper 카메라의 ar마커 인식부분  -->
  <include file="$(find ar_track_alvar)/launch/pr2_indiv_g_d435.launch">
    <arg name="marker_size" value="$(arg user_marker_size)" />
    <arg name="max_new_marker_error" value="0.08" />
    <arg name="max_track_error" value="0.2" />
    <arg name="g_cam_image_topic" value="/g_d435/rgb/g_image_raw" />
    <arg name="g_cam_info_topic" value="/g_d435/rgb/camera_info" />
    <arg name="output_frame" value="$(arg marker_frame_id)" />    
  </include> 


  <!-- Load the URDF, SRDF and other .yaml configuration files on the param server -->
  <include file="$(find ur_hrihand_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- Run the main MoveIt! executable without trajectory execution (we do not have controllers configured by default) -->
  <include file="$(find ur_hrihand_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="pipeline" value="$(arg pipeline)"/>
  </include>

  <!-- Run Rviz and load the default config to see the state of the move_group node -->
  <include file="$(find ur_hrihand_moveit_config)/launch/moveit_rviz.launch">
    <arg name="rviz_config" value="$(find ur_hrihand_moveit_config)/launch/moveit.rviz"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- If database loading was enabled, start mongodb as well -->
  <include file="$(find ur_hrihand_moveit_config)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

</launch>
